#include <stdio.h>
#include <stdint.h>
#include <stdbool.h>

#include "driverlib/uart.h"
#include "driverlib/sysctl.h"
#include "driverlib/interrupt.h"
#include "utils/uartstdio.h"
#include "inc/hw_uart.h"
#include "inc/hw_memmap.h"
#include "inc/hw_ints.h"

void Init_LED(char LedType)
{
    if (char == "R")
    {
        Init_R();
    }
    else if (char == "G")
    {
        Init_G();
    }
    else if (char == "B")
    {
        Init_B();
    }
    else if ((char == "RG") | (char == "GR"))
    {
        Init_R();
        Init_G();
    }
    else if ((char == "GB") | (char == "BG"))
    {
        Init_G();
        Init_B();
    }
    else if ((char == "RB") | (char == "BR"))
    {
        Init_R();
        Init_B();
    }
    else if (char == "RGB")
    {
        Init_R();
        Init_G();
        Init_B();
    }
}

