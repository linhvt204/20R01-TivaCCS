 Note: "Equal Symbol"
 SCL SDA SDO
 SSI0RX      SDI     PA4     MOSI    SDA
 SSI0FSS     SS      PA3     FSS     CS
 SSI0TX      DIN     PA5     MISO    SDO
 SSI0CLK     SCLK    PA2     SCL     SCL     SCK

 SDI slave -> SDO master
 ********************************************************************************/

#include <stdio.h>
#include <stdint.h>
#include <stdbool.h>
#include <user_init/InitSSI.h>

#include "driverlib/sysctl.h"
#include "driverlib/ssi.h"
#include "driverlib/rom_map.h"
#include "inc/hw_memmap.h"

void Init_SSI0(void)
{
    uint32_t pui32DataRx;
    pui32DataRx = 0;
    MAP_SysCtlPeripheralEnable(SYSCTL_PERIPH_SSI0);
    while (!(SysCtlPeripheralReady(SYSCTL_PERIPH_SSI0)))
    {
    }
    SSIDisable(SSI0_BASE);
    SSIConfigSetExpClk(SSI0_BASE, SysCtlClockGet(), SSI_FRF_MOTO_MODE_0,
    SSI_MODE_MASTER,
                       1000000, 8);
    SSIEnable(SSI0_BASE);
    while (SSIDataGetNonBlocking(SSI0_BASE, &pui32DataRx))
    {
    }
}
