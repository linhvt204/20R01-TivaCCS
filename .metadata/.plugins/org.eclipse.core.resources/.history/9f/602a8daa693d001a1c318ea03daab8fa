#include <stdio.h>
#include <stdint.h>
#include <stdbool.h>


#include "driverlib/uart.h"
#include "driverlib/sysctl.h"
#include "driverlib/interrupt.h"
#include "utils/uartstdio.h"
#include "inc/hw_uart.h"
#include "inc/hw_memmap.h"
#include "inc/hw_ints.h"
#include "user_init/InitLED.h"

void Init_LED(char LedType)
{
    if (LedType == "R")
    {
        Init_R();
    }
    else if (LedType == "G")
    {
        Init_G();
    }
    else if (LedType == "B")
    {
        Init_B();
    }
    else if ((LedType == "RG") | (LedType == "GR"))
    {
        Init_R();
        Init_G();
    }
    else if ((LedType == "GB") | (LedType == "BG"))
    {
        Init_G();
        Init_B();
    }
    else if ((LedType == "RB") | (LedType == "BR"))
    {
        Init_R();
        Init_B();
    }
    else if (LedType == "RGB")
    {
        Init_R();
        Init_G();
        Init_B();
    }
}

