#include <stdio.h>
#include <stdint.h>
#include <stdbool.h>
#include <user_init/InitInc.h>

void Init_Comparator0(void)
{
    uint32_t ready_count;
    SysCtlPeripheralDisable(SYSCTL_PERIPH_COMP0);
    SysCtlPeripheralReset(SYSCTL_PERIPH_COMP0);
    SysCtlPeripheralEnable(SYSCTL_PERIPH_COMP0);
    // 2000U just make sure ready_count is unsigned variable.
    ready_count = 2000U;
    while (((!SysCtlPeripheralReady(SYSCTL_PERIPH_COM0))) && (--ready_count))
    {
    }
    }

}
