/*******************************************************************************
 *                              Includes  & Defines
 *******************************************************************************/
//  #include <example.h>
#include <user_init/InitInc.h>

//  #define example 0x04
/*******************************************************************************
 *                              Global Variables
 *******************************************************************************/
//  uint32_t example;
uint32_t PF1PWMPeriod;
uint32_t PF2PWMPeriod;
uint32_t PF3PWMPeriod;
/*******************************************************************************
 *                              Function Prototypes
 *******************************************************************************/
//  void example(void);
void RGBPWM(void);
/*******************************************************************************
 *                              Main Program
 *******************************************************************************/

int main(void)
{
    Init_SysCtl(80);
    PinoutSet();
    // Init Peripherals
    Init_SysTick();
    Init_PWM1();
    while (1)
    {

        RGBPWM();
    }
}

/*******************************************************************************
 *                              Function Definition
 *******************************************************************************/
//  void example(void){}
void RGBPWM(void)
{
    PWMPulseWidthSet(PWM0_BASE, PWM_OUT_5, PF1PWMPeriod);
    PWMPulseWidthSet(PWM0_BASE, PWM_OUT_6, PF2PWMPeriod);
    PWMPulseWidthSet(PWM0_BASE, PWM_OUT_7, PF3PWMPeriod);
}
