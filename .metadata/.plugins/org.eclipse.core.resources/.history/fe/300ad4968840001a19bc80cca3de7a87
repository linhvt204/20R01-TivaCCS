/*******************************************************************************
 *                              Includes  & Defines
 *******************************************************************************/
//  #include <example.h>
#include <user_init/InitInc.h>

//  #define example 0x04
/*******************************************************************************
 *                              Global Variables
 *******************************************************************************/
//  uint32_t example;
uint32_t PF1PWMPeriod;
uint32_t PF2PWMPeriod;
uint32_t PF3PWMPeriod;
/*******************************************************************************
 *                              Function Prototypes
 *******************************************************************************/
//  void example(void);
void RGBPWM(void);
/*******************************************************************************
 *                              Main Program
 *******************************************************************************/

int main(void)
{
    Init_SysCtl(80);
    PinoutSet();
    // Init Peripherals
    Init_PWM();
    while (1)
    {
        RGBPWM();
    }
}

/*******************************************************************************
 *                              Function Definition
 *******************************************************************************/
//  void example(void){}
void RGBPWM(void)
{

    PWMGenConfigure(PWM1_BASE, PWM_GEN_5, PWM_GEN_MODE_UP_DOWN | PWM_GEN_MODE_DB_NO_SYNC);
    PWMGenConfigure(PWM1_BASE, PWM_GEN_6, PWM_GEN_MODE_UP_DOWN | PWM_GEN_MODE_DB_NO_SYNC);
    PWMGenConfigure(PWM1_BASE, PWM_GEN_7, PWM_GEN_MODE_UP_DOWN | PWM_GEN_MODE_DB_NO_SYNC);

    PWMGenPeriodSet(PWM0_BASE, PWM_GEN_0, 800);
    PWMGenPeriodSet(PWM0_BASE, PWM_GEN_1, 800);
    PWMGenPeriodSet(PWM0_BASE, PWM_GEN_2, 800);

    PWMGenEnable(PWM0_BASE, PWM_GEN_0);
    PWMGenEnable(PWM0_BASE, PWM_GEN_1);
    PWMGenEnable(PWM0_BASE, PWM_GEN_2);
}
