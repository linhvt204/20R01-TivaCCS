/*******************************************************************************
 *                              Global Variables
 *******************************************************************************/

/*******************************************************************************
 *                              Function Prototypes
 *******************************************************************************/

/*******************************************************************************
 *                              Main Program
 *******************************************************************************/

int main(void)
{
    Init_SysCtl(80);
    Init_Led(RED | GREEN | BLUE);
    while (1)
    {
        LEDS ^= BLUE|GREEN|RED;
        delay_s(1);
    }
}

