/*******************************************************************************
 *                              Includes  & Defines
 *******************************************************************************/
//  #include <example.h>
#include <user_init/InitInc.h>
/*******************************************************************************
 *                              Global Variables
 *******************************************************************************/

/*******************************************************************************
 *                              Function Prototypes
 *******************************************************************************/

/*******************************************************************************
 *                              Main Program
 *******************************************************************************/

int main(void)
{
    Init_SysCtl(80);
    Init_Led(RED | GREEN | BLUE);
    while (!GPIOPinRead(GPIO_PORTF_BASE, GPIO_PIN_0) = GPIO_PIN_0)
    {
    }
    while (1)
    {
        LEDS ^= BLUE;
        delay_s(1);
        LEDS ^= GREEN;
        delay_s(1);
        LEDS ^= RED;
        delay_s(1);
    }
}

